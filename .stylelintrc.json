{
  "extends": "stylelint-config-idiomatic-order",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      [
        "dollar-variables",
        "custom-properties",
        "at-rules",
        "declarations",
        {
          "type": "at-rule",
          "name": "supports"
        },
        {
          "type": "at-rule",
          "name": "media"
        },
        "rules"
      ]
    ],
    "order/properties-order": [
      "width",
      "height"
    ]
  }
}


